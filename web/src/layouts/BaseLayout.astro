---
import "../styles/global.css";

const { title = "Soundvibes" } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="Soundvibes is the offline speech-to-text CLI for Linux with minimal dependencies, automatic model downloads, and a simple toggle workflow."
    />
    <link rel="icon" href={`${baseUrl}favicon.svg`} type="image/svg+xml" />
    <link rel="icon" href={`${baseUrl}favicon.ico`} sizes="any" />
    <link rel="apple-touch-icon" href={`${baseUrl}apple-touch-icon.png`} />
    <title>{title}</title>
    <script defer src="https://cloud.umami.is/script.js" data-website-id="12c35436-b366-4e06-83b3-a9428fea8887"></script>
  </head>
  <body>
    <div class="page-shell min-h-screen">
      <header class="mx-auto flex w-full max-w-6xl items-center justify-between px-6 py-8">
        <a href={`${baseUrl}`} class="flex items-center gap-3 transition hover:opacity-80">
          <img
            class="h-[112px] w-auto rounded-2xl object-cover"
            src={`${baseUrl}brand/soundvibes.png`}
            alt="Soundvibes logo"
            width="182"
            height="112"
            loading="eager"
          />
          <div>
            <p class="font-display text-lg font-semibold text-ink">Soundvibes</p>
            <p class="text-sm text-ink/60">Open source voice-to-text under your control</p>
          </div>
        </a>
        <nav class="hidden items-center gap-6 text-sm font-medium text-ink/70 md:flex">
          <a class="transition hover:text-ink" href={`${baseUrl}docs`}>Docs</a>
          <a class="transition hover:text-ink" href={`${baseUrl}#install`}>Install</a>
          <a class="transition hover:text-ink" href="https://github.com/kejne/soundvibes" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        </nav>
      </header>
      <main>
        <slot />
      </main>
      <footer class="mx-auto w-full max-w-6xl px-6 pb-12 pt-16 text-sm text-ink/60">
        <div class="flex flex-col gap-3 border-t border-ink/10 pt-6 md:flex-row md:items-center md:justify-between">
          <span>Soundvibes ships as offline binaries via GitHub Releases.</span>
          <div class="flex items-center gap-4">
            <span>Built for Linux, tuned for low-friction voice capture.</span>
            <a href="https://github.com/kejne/soundvibes" target="_blank" rel="noopener noreferrer" class="transition hover:text-ink">View on GitHub</a>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
