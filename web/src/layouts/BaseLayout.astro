---
import "../styles/global.css";

const { title = "Soundvibes" } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="Soundvibes is the offline speech-to-text CLI for Linux with minimal dependencies, automatic model downloads, and a simple toggle workflow."
    />
    <link rel="icon" href={`${baseUrl}favicon.svg`} type="image/svg+xml" />
    <link rel="icon" href={`${baseUrl}favicon.ico`} sizes="any" />
    <link rel="apple-touch-icon" href={`${baseUrl}apple-touch-icon.png`} />
    <title>{title}</title>
  </head>
  <body>
    <div class="page-shell min-h-screen">
      <header class="mx-auto flex w-full max-w-6xl items-center justify-between px-6 py-8">
        <div class="flex items-center gap-3">
          <img
            class="h-[112px] w-auto rounded-2xl object-cover"
            src={`${baseUrl}brand/soundvibes.png`}
            alt="Soundvibes logo"
            width="182"
            height="112"
            loading="eager"
          />
          <div>
            <p class="font-display text-lg font-semibold text-ink">Soundvibes</p>
            <p class="text-sm text-ink/60">Offline voice-to-text, focused.</p>
          </div>
        </div>
        <nav class="hidden items-center gap-6 text-sm font-medium text-ink/70 md:flex">
          <a class="transition hover:text-ink" href="#workflow">Workflow</a>
          <a class="transition hover:text-ink" href="#benefits">Benefits</a>
          <a class="transition hover:text-ink" href="#download">Release</a>
        </nav>
      </header>
      <main>
        <slot />
      </main>
      <footer class="mx-auto w-full max-w-6xl px-6 pb-12 pt-16 text-sm text-ink/60">
        <div class="flex flex-col gap-3 border-t border-ink/10 pt-6 md:flex-row md:items-center md:justify-between">
          <span>Soundvibes ships as offline binaries via GitHub Releases.</span>
          <span>Built for Linux, tuned for low-friction voice capture.</span>
        </div>
      </footer>
    </div>
  </body>
</html>
